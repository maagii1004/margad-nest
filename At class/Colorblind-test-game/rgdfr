
const handleClick = () => {
  console.log("Clicked wrong!");
  timeLeft -= 3; // Deduct 3 seconds for wrong click
  if (timeLeft <= 0) {
      clearInterval(timer);
      alert("Game Over! Time's up!");
      // Reset the game
      resetGame();
  }
};

const handleCorrectClick = () => {
  score++;
  if (score % 3 === 0) {
      level++;
      ROW_COUNT = level + 2;
      COL_COUNT = level + 2;
  }
  draw();
};

const resetGame = () => {
  level = 1;
  ROW_COUNT = 3;
  COL_COUNT = 3;
  score = 0;
  timeLeft = 60;
  timer = null; // Reset timer
  draw();
};
